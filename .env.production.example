# Production Environment Variables
# Copy this file to .env.production and fill in actual values

# Database
DATABASE_URL=postgresql://businesshub_user:STRONG_PASSWORD_HERE@your-db-host:5432/businesshub
DB_PASSWORD=STRONG_PASSWORD_HERE

# Redis
REDIS_URL=redis://your-redis-host:6379

# JWT Authentication
JWT_SECRET=GENERATE_64_CHAR_RANDOM_STRING_HERE
JWT_EXPIRES_IN=7d

# Encryption for Integration Credentials
ENCRYPTION_KEY=GENERATE_64_CHAR_RANDOM_STRING_HERE

# Server Configuration
PORT=3001
NODE_ENV=production
CLIENT_URL=https://yourdomain.com

# Optional: Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Optional: Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Proton Mail (for email proxy)
PROTON_BRIDGE_HOST=127.0.0.1
PROTON_BRIDGE_PORT=1143
PROTON_BRIDGE_SMTP_PORT=1025

# File Storage
NETWORK_DRIVE_PATH=/mnt/network-drives

# Generate random secrets with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
